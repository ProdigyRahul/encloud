{
  "name": "dot-vault",
  "displayName": "DotVault",
  "description": "keep track of your env files across multiple workspaces and different environments!",
  "version": "0.4.0",
  "publisher": "AumTamboli",
  "engines": {
    "vscode": "^1.99.0",
    "pnpm": ">=8.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUriHandler"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "authentication": [
      {
        "id": "supabase-github",
        "label": "Supabase (GitHub)"
      }
    ],
    "commands": [
      {
        "command": "supabase-github.logout",
        "title": " Logout",
        "category": "DotVault"
      },
      {
        "command": "envsync.login",
        "title": " Login",
        "category": "DotVault"
      },
      {
        "command": "envsync.sync",
        "title": " Sync .env Files",
        "category": "DotVault"
      },
      {
        "command": "envsync.restore",
        "title": " Restore .env Files",
        "category": "DotVault"
      },
      {
        "command": "envsync.clear",
        "title": " Clear .env Data",
        "category": "DotVault"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "envsync.login",
          "group": "DotVault"
        },
        {
          "command": "supabase-github.logout",
          "group": "DotVault"
        },
        {
          "command": "envsync.sync",
          "group": "DotVault"
        },
        {
          "command": "envsync.restore",
          "group": "DotVault"
        },
        {
          "command": "envsync.clear",
          "group": "DotVault"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test:vscode": "vscode-test",
    "test": "mocha -r ts-node/register src/test/**/*.ts",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "pnpm run compile",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version",
    "update-version": "ts-node scripts/update-version.ts",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "prepackage": "pnpm run build",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "mocha": "^11.2.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/berzz26/dot-vault"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "dotenv": "^16.5.0",
    "open": "^10.1.2"
  },
  "packageManager": "pnpm@8.15.4"
}
